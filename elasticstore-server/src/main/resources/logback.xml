<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>:: [%thread] %-5level - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.elasticstore" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>